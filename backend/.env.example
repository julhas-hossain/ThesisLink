# Application Settings
APP_NAME=ThesisLink
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./thesislink.db
# For PostgreSQL: postgresql://user:password@localhost/thesislink

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration
EMAIL_PROVIDER=smtp  # Options: smtp, gmail_api
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=ThesisLink

# Gmail API (if using gmail_api)
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Batch Email Settings
BATCH_EMAIL_DELAY_SECONDS=5
MAX_EMAILS_PER_BATCH=50
